version: '2'
services:

    devapp:
        image: hot/dashboard
        build: .
        ports:
#   the local port:the port of the running app on docker side
            - '3000:3000'
        volumes:
            - './:/usr/dockers/devapp/'
            - '/usr/src.old/app/node_modules'
        entrypoint: Docker/docker-entrypoint.sh
